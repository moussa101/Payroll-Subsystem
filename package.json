{
  "name": "payroll-subsystem-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for the HR Payroll Subsystem (NestJS/NextJS/MongoDB) covering configuration, processing, execution, and employee self-service features.",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start:api:prod": "npm run build:api && node dist/apps/payroll-api/main.js",
    "start:web:prod": "npm run start --workspace=apps/payroll-web",
    "build:api": "tsc -p apps/payroll-api/tsconfig.json",
    "build:web": "npm run build --workspace=apps/payroll-web",
    "dev:api": "npm run start:dev --workspace=apps/payroll-api",
    "dev:web": "npm run dev --workspace=apps/payroll-web",
    "dev": "concurrently \"npm:dev:api\" \"npm:dev:web\"",
    "build": "npm run build:api && npm run build:web",
    "test": "jest"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moussa101/Payroll-Subsystem.git"
  },
  "keywords": [
    "nestjs",
    "nextjs",
    "monorepo",
    "payroll"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/moussa101/Payroll-Subsystem/issues"
  },
  "homepage": "https://github.com/moussa101/Payroll-Subsystem#readme",
  "dependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.9",
    "axios": "^1.13.2",
    "env": "^0.0.2",
    "mongoose": "^8.19.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.9",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "next": "^14.0.0",
    "postcss": "^8.5.6",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "source-map-support": "^0.5.21",
    "tailwindcss": "^4.1.17",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
